{
   "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": [
         "ESNext"
      ],
      "skipLibCheck": true,
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "outDir": "dist",

      /* Linting */
      "strict": true,
      "paths": {
         "@/*": [
            "./util/*"
         ]
      }
   },
   "include": [
      "word",
      "util",
      "mapper"
   ],
}
