{
   "compilerOptions": {
      "target": "ESNext",
      "composite": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "lib": [
         "ESNext",
         "WebWorker"
      ],
      "paths": {
         "@/*": [
            "./src/*"
         ]
      }
   },
   "include": [
      "src/worker",
      "env/env.d.ts",
   ]
}
